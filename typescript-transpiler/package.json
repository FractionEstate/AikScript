{
  "name": "aikscript",
  "version": "1.0.0",
  "description": "AikScript: TypeScript-to-Aiken development copilot for Cardano smart contracts",
  "main": "dist/src/index.js",
  "bin": {
    "aikscript": "./dist/src/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli/index.ts",
    "watch": "nodemon --exec ts-node src/cli/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "npx prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "npx prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test",
    "postinstall": "echo '\\nðŸŽ‰ AikScript installed successfully!\\n\\nQuick start:\\n  aikscript --help\\n  aikscript new my-project\\n\\nDocumentation: https://github.com/FractionEstate/AikScript\\n'",
    "bump": "node ../../scripts/bump-version.js",
    "build:packages": "tsc --project tsconfig.packages.json",
    "test:packages": "jest --testPathPattern=packages",
    "lint:packages": "eslint src/core/packages/**/*.ts",
    "format:packages": "npx prettier --write \"src/core/packages/**/*.ts\"",
    "validate:packages": "npm run lint:packages && npm run test:packages && npm run build:packages"
  },
  "keywords": [
    "cardano",
    "smart-contracts",
    "aiken",
    "typescript",
    "blockchain",
    "dapp",
    "web3",
    "cryptocurrency",
    "defi",
    "nft"
  ],
  "author": "FractionEstate <https://github.com/FractionEstate>",
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/FractionEstate"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "commander": "^9.5.0",
    "fs-extra": "^10.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FractionEstate/AikScript.git"
  },
  "homepage": "https://github.com/FractionEstate/AikScript#readme",
  "bugs": {
    "url": "https://github.com/FractionEstate/AikScript/issues"
  },
  "engines": {
    "node": ">=20.19.5"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true
}
