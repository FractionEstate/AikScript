# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{rs,ts,js}]
indent_size = 4

[*.{json,md}]
indent_size = 2

[*.toml]
indent_style = space
indent_size = 2

[*.ak]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.yml]
indent_size = 2
