{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build TypeScript Transpiler",
      "type": "shell",
      "command": "cd typescript-transpiler && npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Test TypeScript Transpiler",
      "type": "shell",
      "command": "cd typescript-transpiler && npm test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Build Aiken",
      "type": "shell",
      "command": "cargo build",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": "$tsc"
    },
    {
      "label": "Test Aiken",
      "type": "shell",
      "command": "cargo test",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Clean All",
      "type": "shell",
      "command": "cargo clean && cd typescript-transpiler && npm run clean",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
