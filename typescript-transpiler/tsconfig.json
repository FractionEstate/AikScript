{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@aiken/collection": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/aiken/collection"],
      "@aiken/crypto": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/aiken/crypto"],
      "@aiken/math": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/aiken/math"],
      "@aiken/cbor": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/aiken/cbor"],
      "@aiken/primitive": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/aiken/primitive"],
      "@aiken/fuzz": ["src/core/packages/aiken-lang/fuzz/v2.2.0/lib/aiken/fuzz"],
      "@aiken/prelude": ["src/core/packages/aiken-lang/prelude/v1.0.0/lib/aiken/prelude"],
      "@aiken/merkle-patricia-forestry": ["src/core/packages/aiken-lang/merkle-patricia-forestry/v2.1.0/lib/aiken/merkle-patricia-forestry"],
      "@cardano/address": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/cardano/address"],
      "@cardano/assets": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/cardano/assets"],
      "@cardano/transaction": ["src/core/packages/aiken-lang/stdlib/v2.2.0/lib/cardano/transaction"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist"]
}
