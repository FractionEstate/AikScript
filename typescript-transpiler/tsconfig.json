{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@aiken/collection": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/collection/index.ts"],
      "@aiken/crypto": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/crypto.ts"],
      "@aiken/math": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/math/index.ts"],
      "@aiken/cbor": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/cbor/index.ts"],
      "@aiken/primitive": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/primitive/index.ts"],
      "@aiken/interval": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/interval.ts"],
      "@aiken/option": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/option.ts"],
      "@aiken/rational": ["packages/aiken-lang/stdlib/v2.2.0/lib/aiken/math/rational.ts"],
      "@aiken/fuzz": ["packages/aiken-lang/fuzz/v2.2.0/lib/aiken/fuzz/index.ts"],
      "@aiken/prelude": ["packages/aiken-lang/prelude/v1.0.0/lib/aiken/index.ts"],
      "@aiken/merkle-patricia-forestry": ["packages/aiken-lang/merkle-patricia-forestry/v2.1.0/lib/aiken/merkle-patricia-forestry/index.ts"],
      "@aiken/helpers": ["packages/aiken-lang/merkle-patricia-forestry/v2.1.0/lib/aiken/merkle-patricia-forestry/helpers.ts"],
      "@aiken/merkling": ["packages/aiken-lang/merkle-patricia-forestry/v2.1.0/lib/aiken/merkle-patricia-forestry/merkling.ts"],
      "@cardano/address": ["packages/cardano/stdlib/v1.0.0/lib/cardano/address.ts"],
      "@cardano/assets": ["packages/cardano/stdlib/v1.0.0/lib/cardano/assets.ts"],
      "@cardano/transaction": ["packages/cardano/stdlib/v1.0.0/lib/cardano/transaction.ts"],
      "@cardano/certificate": ["packages/cardano/stdlib/v1.0.0/lib/cardano/certificate.ts"],
      "@cardano/governance": ["packages/cardano/stdlib/v1.0.0/lib/cardano/governance.ts"],
      "@cardano/script_context": ["packages/cardano/stdlib/v1.0.0/lib/cardano/script_context.ts"],
      "@cardano/credential": ["packages/cardano/stdlib/v1.0.0/lib/cardano/credential.ts"],
      "@cardano/protocol_parameters": ["packages/cardano/stdlib/v1.0.0/lib/cardano/protocol_parameters.ts"],
      "@cardano/voter": ["packages/cardano/stdlib/v1.0.0/lib/cardano/voter.ts"],
      "@cardano/output_reference": ["packages/cardano/stdlib/v1.0.0/lib/cardano/output_reference.ts"],
      "@cardano/script_purpose": ["packages/cardano/stdlib/v1.0.0/lib/cardano/script_purpose.ts"]
    }
  },
  "include": ["src/**/*", "tests/**/*", "examples/**/*", "packages/**/*"],
  "exclude": ["node_modules", "dist"]
}
