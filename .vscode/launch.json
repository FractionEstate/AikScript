{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug TypeScript Transpiler",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/typescript-transpiler/dist/cli/index.js",
      "preLaunchTask": "Build TypeScript Transpiler",
      "outFiles": ["${workspaceFolder}/typescript-transpiler/dist/**/*.js"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}/typescript-transpiler"
    },
    {
      "name": "Debug Current TypeScript File",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}/typescript-transpiler",
      "console": "integratedTerminal",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"]
    }
  ]
}
